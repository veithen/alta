<model xmlns="http://modello.codehaus.org/MODELLO/1.4.0"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://modello.codehaus.org/MODELLO/1.4.0 http://modello.codehaus.org/xsd/modello-1.4.0.xsd">
    <id>artifact-sets</id>
    <name>Artifact set configuration</name>
    <description>
        The set of artifacts to be processed by the Alta plugin can be specified as a
        subset of the project's transitive dependencies or as an explicit list of artifacts.
    </description>
    <defaults>
        <default>
            <key>package</key>
            <value>com.github.veithen.alta</value>
        </default>
    </defaults>
    <classes>
        <class rootElement="true">
            <name>Configuration</name>
            <version>1.0.0+</version>
            <fields>
                <field>
                    <name>dependencySet</name>
                    <version>1.0.0+</version>
                    <association>
                        <type>DependencySet</type>
                    </association>
                    <description>
                        Specifies a subset of the project's transitive dependencies.
                    </description>
                </field>
                <field>
                    <name>artifacts</name>
                    <version>1.0.0+</version>
                    <required>false</required>
                    <association>
                        <type>ArtifactItem</type>
                        <multiplicity>*</multiplicity>
                    </association>
                    <description>
                        A list of Maven artifacts to process.
                    </description>
                </field>
            </fields>
        </class>
        <class>
            <name>DependencySet</name>
            <version>1.0.0+</version>
            <description>
                Specifies a subset of the project's transitive dependencies.
            </description>
            <fields>
                <field>
                    <name>scope</name>
                    <version>1.0.0+</version>
                    <type>String</type>
                    <defaultValue>runtime</defaultValue>
                    <required>true</required>
                    <description>
                        Sets the dependency scope for this dependencySet.
                    </description>
                </field>
            </fields>
        </class>
        <class>
            <name>ArtifactItem</name>
            <version>1.0.0+</version>
            <fields>
                <field>
                    <name>groupId</name>
                    <version>1.0.0+</version>
                    <type>String</type>
                    <required>true</required>
                    <description>
                        The artifact's group ID.
                    </description>
                </field>
                <field>
                    <name>artifactId</name>
                    <version>1.0.0+</version>
                    <type>String</type>
                    <required>true</required>
                    <description>
                        The artifact ID.
                    </description>
                </field>
                <field>
                    <name>version</name>
                    <version>1.0.0+</version>
                    <type>String</type>
                    <required>false</required>
                    <description>
                        The artifact version. If not specified, the plugin will attempt to determine the version from the dependencies of the project.
                    </description>
                </field>
                <field>
                    <name>type</name>
                    <version>1.0.0+</version>
                    <type>String</type>
                    <defaultValue>jar</defaultValue>
                    <description>
                        The artifact type.
                    </description>
                </field>
                <field>
                    <name>classifier</name>
                    <version>1.0.0+</version>
                    <type>String</type>
                    <description>
                        The optional artifact classifier.
                    </description>
                </field>
            </fields>
        </class>
    </classes>
</model>
